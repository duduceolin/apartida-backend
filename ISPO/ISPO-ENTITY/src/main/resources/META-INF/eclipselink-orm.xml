<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_2.xsd"
                 version="2.2">

    <!-- Map Enum to Coded Values
         https://wiki.eclipse.org/EclipseLink/Examples/JPA/EnumToCode
    -->
    <object-type-converter name="booleanConverter"
                           object-type="java.lang.Boolean" data-type="java.lang.String">
        <conversion-value object-value="true" data-value="S"/>
        <conversion-value object-value="false" data-value="N"/>
    </object-type-converter>
</entity-mappings>